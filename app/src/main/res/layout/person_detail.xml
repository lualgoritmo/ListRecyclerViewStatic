<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_24">

        <TextView
            android:id="@+id/tv_title_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Detalhes do Personagem"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/img_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/zup" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_24"
            android:text="nome"
            android:layout_marginHorizontal="@dimen/margin_horiz_12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_detail" />

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horiz_12dp"
            android:text="O meu NOME É ESSA AQUI PORRA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_name" />

        <View
            android:id="@+id/vw_detail"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="@dimen/margin_horiz_12dp"
            android:background="#FF00FF"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horiz_12dp"
            android:layout_marginTop="14dp"
            android:text="idade"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detail_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/margin_horiz_12dp"
            android:text="41"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_age"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/iv_title_genere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="gênero"
            android:layout_marginEnd="@dimen/margin_horiz_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vw_detail" />

        <TextView
            android:id="@+id/tv_detail_genere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_horiz_12dp"
            android:text="masculino"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_title_genere"/>

        <View
            android:id="@+id/vw_description"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="@dimen/margin_horiz_12dp"
            android:background="#FF00FF"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_genere"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintTop_toBottomOf="@id/vw_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            android:text="We gather for about 90-minutes as a group. During this time, we introduce ourselves, briefly discuss a verse or passage from the Bible, and participate in conversation topics like travel, gardening, pets, culture, food, or hobbies.
If you are searching for a community of friends and you want to gain more confidence in your conversational English, this group is a great place to start!
Want more information? Call/text 403-389-6224 or email info@nbccalgary.com." />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>